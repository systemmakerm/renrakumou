<% form_for(@organization, create_before_confirm_org_organizations_path) do |f| %>
    <h1>団体登録</h1>
		<table class="organize">
			<tr>
				<th>団体名</th>
				<td>
          <%= f.text_field :name %>
        </td>
			</tr>
			<tr>
				<th>団体の種類</th>
				<td>
          <%= f.select :purpose, options_for_select_purpose(params[:purpose]) %><br />
  				※その他を選択された方は下にご入力ください。<br />
          <%= text_area_tag :purpose %>
				</td>
			</tr>
			<tr>
				<th>代表者名</th>
				<td>
          <%= f.text_field :leader_name %>
        </td>
			</tr>
			<tr>
				<th>フリガナ</th>
				<td>
          <%= f.text_field :kana %>
        </td>
			</tr>
			<tr>
				<th>性別</th>
				<td>
          <%= f.radio_button :sex , 1 %><%=f.label :sex_1 ,"男" %>
          <%= f.radio_button :sex , 0 %><%=f.label :sex_0 ,"女" %>
				</td>
			</tr>
			<tr>
				<th>郵便番号</th>
				<td>
          <%= f.text_field :zip %>
        </td>
			</tr>
			<tr>
				<th>都道府県</th>
				<td>
          <%= f.select :prefecture, options_for_select_prefecture(params[:prefecture]) %>
				</td>
			</tr>
			<tr>
				<th>住所1</th>
				<td>
          <%= f.text_field :address1 %>
        </td>
			</tr>
			<tr>
				<th>住所2</th>
				<td>
          <%= f.text_field :address2 %>
        </td>
			</tr>
			<tr>
				<th>TEL</th>
				<td>
          <%= f.text_field :tel %>
        </td>
			</tr>
			<tr>
				<th>FAX</th>
				<td>
          <%= f.text_field :fax %>
        </td>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<td>
          <%= f.text_field :email %>
        </td>
			</tr>
			<tr>
				<th>パスワード</th>
				<td>
          <%= password_field_tag 'password', nil %><br />
  				※確認のためもう一度入力してください。<br />
          <%= password_field_tag 'password', nil %>

				</td>
			</tr>
		</table>
		<br />
  <%= f.submit "確認" %>
<% end %>
