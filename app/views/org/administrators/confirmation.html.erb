<h1>管理者<%= @account.administrator.new_record? ? "登録" : "編集" %>確認</h1>
<% form_for(@account, :url => confirmation_params[:url], :html => {:method => confirmation_params[:method]}) do |f| %>
  <%= f.error_messages.untaint %>
  <%= f.submit "戻る", :name => 'cancel' %><br /><br />
  <table class="organize">
    <tr>
      <th>管理名</th>
      <td><%= @account.administrator.name %></td>
    </tr>
  </table>
  <table class="organize">
    <tr>
      <th>メールアドレス</th>
      <td><%= @account.login %></td>
    </tr>
  </table>
  <%= hidden_field_tag 'account[administrator_attributes][name]', @account.administrator.name %>
  <%= hidden_field_tag 'account[administrator_attributes][organization_id]', @account.administrator.organization_id %>
  <%= f.hidden_field :login %>
  <%= f.hidden_field :password %>
  <%= f.hidden_field :login_confirmation %>
  <%= f.hidden_field :password_confirmation %>
  <br />
  <%= f.submit "確認" %>
<% end %>
